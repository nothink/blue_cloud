{
    "name": "blue_cloud",
    "version": "0.0.1",
    "private": true,
    "description": "Rei Shinomiya",
    "main": "main.js",
    "repository": "git@github.com:nothink/blue_cloud.git",
    "author": "nothink <nothing@yasagure.jp>",
    "license": "MIT",
    "scripts": {
        "start": "node dst/main.js",
        "build": "yarn clean && yarn lint && yarn compile",
        "clean": "rm -rf dst",
        "compile": "tsc -p .",
        "doc": "typedoc --out ./doc/ ./src/",
        "lint": "eslint --format stylish 'src/*.ts' 'src/**/*.ts'",
        "eslint-check": "eslint --print-config src/main.ts | eslint-config-prettier-check",
        "precommit": "lint-staged"
    },
    "dependencies": {
        "bunyan": "^1.8.12",
        "commander": "^4.0.1",
        "config": "^3.2.4",
        "husky": "^3.1.0",
        "lint-staged": "^9.5.0",
        "moment": "^2.24.0",
        "puppeteer": "^2.0.0",
        "readline": "^1.3.0"
    },
    "devDependencies": {
        "@types/bunyan": "^1.8.6",
        "@types/config": "^0.0.36",
        "@types/jest": "^24.0.24",
        "@types/puppeteer": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^2.13.0",
        "@typescript-eslint/parser": "^2.13.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.2",
        "jest": "^24.9.0",
        "postcss": "^7.0.25",
        "postcss-syntax": "^0.36.2",
        "prettier": "^1.19.1",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.4",
        "tsutils": "^3.17.1",
        "typedoc": "^0.15.5",
        "typescript": "^3.7.4"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "bracketSpacing": true,
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "useTabs": false
    }
}
